NAME	=	mprintf.a

HEAD	=	src/mprintf.h

SRCS	=	mp_parcer.c \
			mp_putstr.c \
			
SRC_DIR = $(addprefix src/, $(SRCS))

OBJ		= $(patsubst src/%.c, obj/%.o, $(SRC_DIR))

CC = clang

FLAG = -Wall -Wextra -Werror

obj/%.o:	src/%.c $(HEAD)
	$(CC) $(FLAG) -c $<

all: $(OBJ_DIR) %(NAME)

$(NAME):	&(SRCS) $(HEAD)
	ar rc $(NAME) $(OBJ)

clean:
	rm -rf $(OBJ)

fclean: clean
	rm -rf $(NAME)

re: fclean all